<label class="col-@ElementVraag.Columns offset-@ElementVraag.Column">
    @ElementVraag.Text
</label>

@if (ElementVraag.Antwoorden != null)
{
    @foreach (var antwoord in ElementVraag.Antwoorden)
    {
        <FormulierElementAntwoord formulierAntwoord="@antwoord"></FormulierElementAntwoord>
    }
}


@code {
    [Parameter]
    public FormulierVraag ElementVraag { get; set; }

}