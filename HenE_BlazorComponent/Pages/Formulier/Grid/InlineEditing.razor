<div class="col-lg-9 control-section offset-2">
    <div class="content-wrapper">
        <div class="row">
            <EjsGrid DataSource="@GridData" Toolbar="@(new List<string>() { "Add", "Edit", "Delete", "Update", "Cancel" })" AllowPaging="true">
                <GridEditSettings AllowAdding="true" AllowDeleting="true" AllowEditing="true"></GridEditSettings>
                <GridColumns>
                    @foreach (var prop in typeof(KinderFormulier).GetProperties())
                    {
                        <GridColumn Field="@prop.Name"  AllowEditing="@prop.CanWrite"></GridColumn>
                    }
                </GridColumns>
            </EjsGrid>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public List<FormulierElement> Elementen { get; set; }

        [Parameter]
    public List<KinderFormulier> GridData { get; set; }
}
