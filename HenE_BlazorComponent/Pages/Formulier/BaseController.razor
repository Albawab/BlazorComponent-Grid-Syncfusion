@page "/formulier"
@using HenE_BlazorComponent.Data.Formulier
@using HenE_BlazorComponent.Data.Formulier.Belastingdienst

<div style="text-align:center">
    <h1>@aangifteDividendBelasting.Titel</h1>
</div>

<div class="container-fluid">
    @foreach (var formulierElenent in formulierElementenGroup)
    {
        <div>
            @foreach (var element in formulierElenent)
            {
                <FormulierElement Section=element></FormulierElement>
            }

        </div>
    }
</div>


@code {
    AangifteDividendBelasting aangifteDividendBelasting = new AangifteDividendBelasting();
    dynamic formulierElementenGroup;
    protected override void OnInitialized()
    {
        formulierElementenGroup = aangifteDividendBelasting.Kinderen.GroupBy(G => G.Row);
    }


}
