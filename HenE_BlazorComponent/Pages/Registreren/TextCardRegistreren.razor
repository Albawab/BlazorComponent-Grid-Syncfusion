@using HenE_BlazorComponent.Enumeration

<label class="d-flex @VAlign @HAlign col-@CardTextElement.Columns offset-@CardTextElement.Column">
    <EjsTextBox Placeholder="@CardTextElement.Placeholder" Value="" FloatLabelType="FloatLabelType.Auto"></EjsTextBox>
</label>


@code {
    [Parameter]
    public CardTextElement CardTextElement { get; set; }

    [Parameter]
    public Persoon Persoon { get; set; }



    public string VAlign
    {
        get
        {
            return $"justify-content-{CardTextElement.VerticalAlign.ToBootstrap()}";
        }
    }
    public string HAlign
    {
        get
        {
            return $"align-items-{CardTextElement.HorizontalAlign.ToBootstrap()}";
        }
    }

}
